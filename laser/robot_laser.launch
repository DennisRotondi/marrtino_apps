<launch>

        <!-- robot node -->
        <node pkg="srrg2_orazio_ros" type="orazio_robot_node" name="robot" output="screen">
        </node>

        <!-- node pkg="srrg_core_ros" type="srrg_state_publisher_node" name="state_pub" args="-base_link_frame_id base_frame $(find spqrel_navigation)/config/transforms.txt" >
        </node -->

	<node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
		<param name="serial_port"         type="string" value="/dev/rplidar"/>  
  		<param name="serial_baudrate"     type="int"    value="115200"/>
  		<param name="frame_id"            type="string" value="laser_frame"/>
  		<param name="inverted"            type="bool"   value="false"/>
  		<param name="angle_compensate"    type="bool"   value="true"/>
  	</node>
	


</launch>


