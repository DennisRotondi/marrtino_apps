  base:
    image: marrtino:base
    build:
      context: $MARRTINO_APPS_HOME/docker
      dockerfile: Dockerfile.base
    container_name: base
    dns: 8.8.8.8
    network_mode: "host"
    tty: true
    environment:
    - ROS_IP=$ROS_IP
    volumes:
    - $HOME/src/marrtino_apps:/home/robot/src/marrtino_apps
    - $HOME/log:/home/robot/log
    - $HOME/system_config.yaml:/home/robot/system_config.yaml

